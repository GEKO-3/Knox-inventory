{
    "name": "Knox POS System",
    "short_name": "Knox POS",
    "description": "Point of Sale system for Knox Restaurant - Enhanced scroll detection, category display, and bill management",
    "version": "1.2.1",
    "start_url": "./pos.html",
    "display": "standalone",
    "orientation": "portrait",
    "theme_color": "#D58A94",
    "background_color": "#ecf0f1",
    "scope": "./",
    "lang": "en",
    "dir": "ltr",
    "categories": ["business", "productivity", "food"],
    "icons": [
        {
            "src": "./icon-192x192.svg",
            "sizes": "192x192",
            "type": "image/svg+xml",
            "purpose": "any maskable"
        },
        {
            "src": "./icon-512x512.svg",
            "sizes": "512x512",
            "type": "image/svg+xml",
            "purpose": "any maskable"
        }
    ],
    "shortcuts": [
        {
            "name": "New Order",
            "short_name": "Order",
            "description": "Start a new customer order",
            "url": "./pos.html",
            "icons": [
                {
                    "src": "./icon-192x192.svg",
                    "sizes": "192x192",
                    "type": "image/svg+xml"
                }
            ]
        },
        {
            "name": "Order History",
            "short_name": "History",
            "description": "View past orders and receipts",
            "url": "./pos.html#history",
            "icons": [
                {
                    "src": "./icon-192x192.svg",
                    "sizes": "192x192",
                    "type": "image/svg+xml"
                }
            ]
        },
        {
            "name": "Settings",
            "short_name": "Settings",
            "description": "Configure POS settings",
            "url": "./pos.html#settings",
            "icons": [
                {
                    "src": "./icon-192x192.svg",
                    "sizes": "192x192",
                    "type": "image/svg+xml"
                }
            ]
        }
    ],
    "related_applications": [
        {
            "platform": "web",
            "url": "../index.html",
            "id": "knox-inventory"
        }
    ],
    "prefer_related_applications": false,
    "protocol_handlers": [
        {
            "protocol": "web+knox",
            "url": "./pos.html?action=%s"
        }
    ],
    "edge_side_panel": {
        "preferred_width": 400
    },
    "launch_handler": {
        "client_mode": "navigate-existing"
    },
    "handle_links": "preferred",
    "capture_links": "existing-client-navigate"
}